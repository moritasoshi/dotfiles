# This is Git's per-user configuration file.
[include]
  path = ~/.gitconfig.local
[core]
  excludesfile = /Users/morita/.gitignore_global
  editor = nvim -c \"set fenc=utf-8\"
[commit]
  template = /Users/morita/.stCommitMsg
[ghq]
  root = ~/src
[alias]
  a = add
  ap = add -p
  br = branch
  c = checkout
  co = commit
  coa = commit --amend
  d = diff
  ds = diff --name-only # diff of summary
  fa = fetch --all
  l = log
  ll  = log --graph --pretty=format:'%x09%C(auto)%h  %Cgreen%ad %Cresetüê∂(%C(cyan)%an%Creset)%x09%C(auto)%s%d' --date=format:'%Y-%m-%d %H:%M'
  last = show HEAD
  pushs = push --set-upstream origin HEAD
  s = status
  # find a dropped stash
  stash-find = !"git fsck --unreachable | awk '/commit/ {print $3}' | xargs git log --merges --no-walk --grep=WIP --all-match"
  stash-pick = cherry-pick -n -m1fa = fetch --all
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[merge]
  tool = vimdiff
[mergetool]
  prompt = false
[init]
  defaultBranch = main
